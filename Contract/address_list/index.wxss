.address_list_container {
  height: 100vh;
  background-color: #F4F4F4;
overflow: auto;
}

.address_item {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.address_btx {
  color: #fff;
  background-color: #333;
  height: 90rpx;
  line-height: 90rpx;
  width: 100vw;
  font-size: 32rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.no_address {
  background-color: #fff;
  height: 100vh;
  text-align: center;
  letter-spacing: 4rpx;
}

.add_address_center {
  color: #fff;
  background-color: #333;
  height: 70rpx;
  line-height: 70rpx;
  width: 8rem;
  font-size: 28rpx;
  text-align: center;
  border-radius: 4rpx;
  margin-top: 20rpx;
}