/* pages/home/index.wxss */

.page-body {
  height: -webkit-fill-available;
  overflow: auto;
  background-color: #f4f4f4;
  border-top:transparent;
  
}
.category{
  background-color: #fff;
  text-align: center;
  padding: 30rpx;
}
.around_shop{
  padding: 30rpx 30rpx;
  margin-bottom: 5vh;
}
.around_shop_item{
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.around_shop_item_marketplaceName{
  font-weight:bold;
}
.go_shop{
  border-radius: 40rpx;
  color: #FF7F00;
  border:1rpx solid #FF7F00;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  transform: scaleY(1);
}
.userinfo-avatar {
  border-color: #fff !important;
  border: 0 !important;
  background-color: none !important;
  padding: 0 !important;
  min-height: 70rpx !important;
  max-height: 70rpx !important;
  min-width: 70rpx !important;
  max-width: 70rpx !important;
  margin-right: 20rpx !important;
  border-radius: 40rpx !important;
}
.nickName{
  white-space: nowrap;
  color: #fff;
}
.postion{
  max-width: 8rem;
  min-width: 8rem;
  white-space: nowrap;
  color: #fff;
}
.fresh_search {
  padding: 0 20rpx;
  color: #000;
  background-color: #fff;
}
.statusbox{
  width:100%;height:100%;
  background-color: #fff;
  position: relative;
  padding-bottom:  10rpx; 
}

.search {
   border-radius: 40rpx;
   padding: 10rpx 20rpx;
  background-color: #f3f3f3;
  margin-left: 20rpx;
}

.banner{
  text-align: center;
  background-color: #fff;
  padding: 120rpx 30rpx 20rpx;
  /* margin-top: -21vh; */

}
.home_market_address{
  color:#888888;
  font-size:24rpx; 
  /* margin-top: 30%; */
  margin: 30% 0 5% 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

}

.home_market_merchant{
  position: absolute;
  top: 20rpx;
  line-height: 44rpx;
}
