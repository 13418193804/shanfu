<view class="cart_container">
	<view wx:if="{{token}}">
	<van-checkbox-group value="{{ selectCartList }}" bind:change="onChange" >
		<view class="shop_width_goods" wx:for="{{cartObj}}">
		
		<view style="padding: 20rpx 30rpx;" class="fontSize28">
			<van-checkbox  checked-color="#FF7F00"  name="{{index}}"  >{{index}}></van-checkbox>
		</view>

		<view wx:for="{{cartObj[index]}}" wx:for-item="cart" style="background-color: #fff;">
			<van-swipe-cell right-width="{{ 65 }}">
				<view class="good_info_item flex flex-align-center fontSize28">
					<van-checkbox  checked-color="#FF7F00" name="{{cart.cartId}}" ></van-checkbox>
						<image mode="widthFix" src="{{cart.goodsImg}}" style="width:20vw;margin:0 20rpx;"></image>
					<view style="">
						<view style="position: absolute;top: 20rpx;">
							<view class="fontSize28">{{cart.goodsName}}</view>
							<view style="color:#888888;" class="fontSize24">{{cart.skuKeyValue}}</view>
						</view>
						<view class="flex flex-align-center cart_price_view">
								<view style="color:red">
									<text>￥</text>
									<text style="font-size:38rpx">{{cart.salePrice}}</text>
								</view>
								<view class="label_price">
									<text>￥</text>
									<text >{{cart.labelPrice}}</text>
								</view>
							</view>
						</view>
					<view class="progress flex  flex-align-center">

						<i class="iconfont iconjian " style="font-size:54rpx;color:#E5E5E5"></i>

						<text style="width:50rpx;text-align:center;">{{cart.num}}</text>

						<i class="iconfont iconadd " style="font-size:54rpx;color:#009A44"></i>

					</view>

				</view>
				<view slot="right" class="delete_cart flex  flex-align-center flex-pack-center"><text>删除</text></view>
			</van-swipe-cell>
		</view>
	</view>
		</van-checkbox-group>

    <view style="height:100rpx;"></view>

	<van-submit-bar price="{{ 3050 }}" button-text="去支付" bind:submit="submitCart">

		<van-checkbox  checked-color="#FF7F00" value="{{ selectAll }}" bind:change="onSelectAllChange">全选</van-checkbox>
	</van-submit-bar>
</view>
<view wx:else class="cart_empty  flex  flex-align-center flex-pack-center">
<view>
	<view class="fontSize32" style="margin-bottom:30rpx;color:#666;">还没有登录</view>
	<view>
		<button type="primary" plain size="mini" bindtap="goLogin">授权登录</button>
	</view>
	</view>
</view>

</view>