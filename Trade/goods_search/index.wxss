.goods_search {
    height: 100vh;
}
.search_postion {
    padding: 0 20rpx;
    height: 100rpx;
}
.postion_store_select {
    max-width: 8rem;
    min-width: 8rem;
    font-size:32rpx;
}
.search_white {
    border-radius: 40rpx;
    padding: 10rpx 20rpx;
    background-color: #F4F4F4;
    border: 1rpx solid #e5e5e5;
    margin-left: 20rpx;
}
.search_record{
    border-top: 2rpx solid #F4F4F4;
    margin: 20rpx 30rpx;
    padding-top: 20rpx;
}
.search_record_list{
    padding: 0 20rpx;
    text-align: center;
    line-height: 60rpx;
    margin-top: 40rpx;
    background-color: #F4F4F4;
    border: 1rpx solid #e5e5e5;
    border-radius: 40rpx;
}
.goods_item {
    position: relative;
    margin-top: 20rpx;
}
.goods_item:active{
    /* background-color: #F6F6F8; */
}
.plus {
    position: absolute;
    right: 40rpx;
    bottom: 10rpx;
}
.category_image_box {
    min-width: 35vw;
    max-width: 35vw;
    min-height: 25vw;
    max-height: 25vw;
    overflow: hidden;
    margin: 0 20rpx;
}
.label_price {
    text-decoration: line-through;
    color: #666;
    font-size: 24rpx;
    margin-left: 10rpx;
}
.sku_content {
    padding: 0 20px;
}
.sku_goods_content {
    margin: 20rpx 0;
    min-height: 170rpx;
}
.category_image_boxs {
    min-width: 20vw;
    max-width: 20vw;
    min-height: 20vw;
    max-height: 20vw;
    overflow: hidden;
    margin: 0 20rpx;
}
.sku_content_list {
    padding: 20rpx 0;
}
.sku_content_item {
    background-color: #f1f2f7;
    min-width: 6rem;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    padding: 10rpx;
    text-align: center;
    font-size: 28rpx;
    float: left;
}
.sku_content_item_active {
    background-color: #f0f8ff;
    color: #2092fc !important;
}
.sku_content_submit {
    position: absolute;
    bottom: 20rpx;
    width: -webkit-fill-available;
    left: 0;
    padding: 0 20rpx;
}
.banner_swiper{
    width: 100%;
    height: 600rpx;
}
.goods_content{
    padding: 40rpx 20rpx 0;
}
.goods_content_same{
    overflow: hidden;
    text-overflow: ellipsis;
}
.goods_content_name{
    font-weight: bold;
}
.goods_content_jingle{
    color:#888888;
    margin: 30rpx 0;
}
.goods_content_salePrice{
    color: red;
    font-size: 38rpx;
}
.goods_content_labelPrice{
    color: #666;
    font-size: 32rpx;
    margin: 6rpx 0 0 10rpx;
    text-decoration: line-through;
}
.goods_content_addCart{
    border:1rpx solid #FF7F00;
    border-radius: 40rpx;
    color: #ffffff;
    background-color: #FF7F00;
    padding: 0 18rpx;
    line-height: 50rpx;
}
.goods_content_detail{
    font-size: 36rpx;
    font-weight: bold;
    margin: 40rpx 0;
    padding-left: 20rpx;
}
.introduce_detail{
    margin:0 0 40rpx 20rpx;
    color: #888888;
}
.detail_rich_text .wscnph {
    width: 100%;
}